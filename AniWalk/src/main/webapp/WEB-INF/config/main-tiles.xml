<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- 사용자 템플릿 등록 -->
	<definition name="mainTemplate" 
			template="/WEB-INF/layout/mainLayout.jsp">
		<put-attribute name="top" value="/WEB-INF/include/top.jsp"/>
		<put-attribute name="content" value="/WEB-INF/include/content.jsp"/>
	</definition>
	
	<!-- admin 템플릿 등록 -->
	<definition name="adminTemplate" 
			template="/WEB-INF/layout/adminlayout.jsp">
		<put-attribute name="top" value="/WEB-INF/include/top.jsp"/>
		<put-attribute name="adminleft" value="/WEB-INF/include/adminleft.jsp"/>
		<put-attribute name="admincontent" value="/WEB-INF/include/admincontent.jsp"/>
	</definition>
	
	<!-- 첫 번째 페이지 등록 -->
	<definition name="index" extends="mainTemplate"></definition>
	<definition name="admin/index" extends="adminTemplate"></definition>
	
	<!-- main-tiles.xml에서는 전체적인 뷰의 템플릿을 정의한다. -->
	
	
</tiles-definitions>